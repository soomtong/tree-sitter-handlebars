{
  "name": "tree-sitter-handlebars",
  "version": "1.0.0",
  "description": "Tree-sitter grammar for parsing handlebars templates with injections for the host language",
  "main": "grammar.js",
  "types": "bindings/node",
  "scripts": {
    "install": "node-gyp-build",
    "prestart": "tree-sitter build --wasm",
    "start": "tree-sitter playground",
    "test": "node --test bindings/node/*_test.js"
  },
  "author": "Alyssa Carter",
  "license": "ISC",
  "dependencies": {
    "node-gyp-build": "^4.8.1",
    "tree-sitter-cli": "^0.23.0"
  },
  "peerDependencies": {
    "tree-sitter": "^0.21.1"
  },
  "peerDependenciesMeta": {
    "tree_sitter": {
      "optional": true
    }
  },
  "devDependencies": {
    "prebuildify": "^6.0.1"
  },
  "files": [
    "grammar.js",
    "binding.gyp",
    "prebuilds/**",
    "bindings/node/*",
    "queries/*",
    "src/**",
    "*.wasm"
  ],
  "tree-sitter": [
    {
      "scope": "source.handlebars_html",
      "injection-regex": "^handlebars_html$"
    }
  ]
}
